{{#bs-form action="decrypt" model=this}}
    <div class="{{if isModal 'modal-body'}}">
      {{#if showForgot}}
          <div class="alert alert-info">
              <p>Did you forget your {{t 'decrypt.passphrase'}}?</p>
              <p>You can {{#link-to 'generate' (query-params forgot=true)}}generate{{/link-to}} a new key. By doing so
                  you will loose your addressbook
                  and all its contacts!</p>
          </div>
      {{/if}}
      {{bs-form-element controlType="password" label=(t 'decrypt.passphrase') property="passphrase"}}
    </div>
    <div class="{{if isModal 'modal-footer'}}">
      {{#bs-form-group}}
        {{#bs-button type="primary" buttonType="submit"}}{{t 'actions.decrypt'}}{{/bs-button}}
          <a href="#" {{action 'invalidateSession'}} class="btn btn-default">{{t 'actions.logout'}}</a>
      {{/bs-form-group}}
    </div>
{{/bs-form}}
