{{#if showSuccess}}
    <div class="{{if isModal 'modal-body'}}">
      {{format-html-message 'reset.success' email=email}}
    </div>
    <div class="{{if isModal 'modal-footer'}}">
      {{#bs-form-group}}
        {{#link-to 'login' class="btn btn-link pull-left"}}{{t 'actions.login'}}{{/link-to}}
      {{/bs-form-group}}
    </div>
{{else}}
  {{#bs-form action="reset" model=this novalidate=true}}
      <div class="{{if isModal 'modal-body'}}">
        {{format-html-message 'reset.text'}}
        {{bs-form-element controlType="password" label=(t 'signup.password') property="password" autofocus=true}}
      </div>
      <div class="{{if isModal 'modal-footer'}}">
        {{#bs-button type="primary" buttonType="submit" textState=resetState}}{{t 'actions.reset'}}{{/bs-button}}
        {{#link-to 'login' class="btn btn-default"}}{{t 'actions.cancel'}}{{/link-to}}
      </div>
  {{/bs-form}}
{{/if}}
