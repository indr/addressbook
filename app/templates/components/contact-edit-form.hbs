{{#bs-form action="save" model=model formLayout='horizontal'}}
    <div class="row">
        <div class="col-sm-6 col-lg-6">
            <fieldset>
                <legend>{{t 'contact.legend.information'}}</legend>
              {{bs-form-element controlType="text" label=(t 'contact.name') property="name$"}}
              {{bs-form-element controlType="text" label=(t 'contact.phoneNumber') property="contact_phoneNumber$"}}
              {{bs-form-element controlType="text" label=(t 'contact.emailAddress') property="emailAddress$" disabled=model.me}}
              {{bs-form-element controlType="text" label=(t 'contact.website') property="contact_website$"}}
            </fieldset>
        </div>

        <div class="col-sm-6 col-lg-6">
            <fieldset>
                <legend>{{t 'contact.legend.location'}}</legend>
              {{bs-form-element controlType="text" label=(t 'location.name') property="location_name$"}}
              {{bs-form-element controlType="text" label=(t 'location.latitude') property="location_latitude$"}}
              {{bs-form-element controlType="text" label=(t 'location.longitude') property="location_longitude$"}}
                <p>
                  {{#link-to 'map.view' model (query-params center=true)}}
                    {{#if model.location}}Show on map{{else}}Set on map{{/if}}
                  {{/link-to}}
                  {{#if model.location}}
                      or <a href="#" {{action 'deleteLocation'}}>Remove</a>
                  {{/if}}
                </p>
            </fieldset>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-lg-6">
            <fieldset>
                <legend>{{t 'contact.legend.internet'}}</legend>
              {{bs-form-element controlType="text" label=(t 'internet.skype') property="internet_skype$"}}
              {{bs-form-element controlType="text" label=(t 'internet.telegram') property="internet_telegram$"}}
              {{bs-form-element controlType="text" label=(t 'internet.whatsapp') property="internet_whatsapp$"}}
            </fieldset>
        </div>

        <div class="col-sm-6 col-lg-6">
            <fieldset>
                <legend>{{t 'contact.legend.notes'}}</legend>
                <div class="form-group">
                    <div class="col-md-12">
                        {{textarea value=model.contact_notes$ class="form-control" rows="10"}}
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    {{#bs-form-group}}
      {{#bs-button type="primary" buttonType="submit"}}{{t 'actions.save'}}{{/bs-button}}
      {{#bs-button type="default" action="cancel"}}{{t 'actions.cancel'}}{{/bs-button}}
      {{#if model.me}}
          <button {{action 'share' model}} class="btn btn-success">Share</button>
      {{else}}
          <button {{action 'delete' model}} class="btn btn-danger">{{t 'actions.delete'}}</button>
      {{/if}}
    {{/bs-form-group}}
{{/bs-form}}
