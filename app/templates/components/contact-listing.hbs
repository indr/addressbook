<div class="list-group">
  {{#each model as |contact|}}
    {{#link-to "contacts.edit" contact class="list-group-item"}}
      {{#if contact.decrypted}}
          <strong>{{contact.name$}}</strong>
        {{#if contact.newValuesCount}}<span
                class="pull-right label label-pill label-danger label">{{contact.newValuesCount}}</span>{{/if}}
          <br/>{{contact.currentState.stateName}} / {{contact.inFlight}}<br/>
      {{else}}
          <span class="glyphicon glyphicon-alert"></span>
          <strong>{{t 'errors.decryption-failed'}}</strong><br/>
          <small>{{contact.id}}</small>
      {{/if}}
    {{/link-to}}
  {{else}}
      <div class="alert alert-info">{{t 'contacts.no-results'}}</div>
  {{/each}}
</div>
