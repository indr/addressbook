{{format-html-message 'share.text'}}
<table class="table">
    <thead>
    <tr>
        <th>{{t 'share.category'}}</th>
        <th>{{t 'share.name'}}</th>
        <th>{{t 'share.value'}}</th>
        <th>{{t 'share.checkbox'}}</th>
    </tr>
    </thead>
    <tbody>
    {{#each properties as |property|}}
        <tr>
            <td>{{t property.legend}}</td>
            <td>{{t property.name}}</td>
            <td>{{property.value}}</td>
            <td>{{input type="checkbox" checked=property.checked disabled=property.disabled}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
{{#bs-button type="default" action="share"}}{{t 'actions.share'}}{{/bs-button}}
{{#bs-button type="default" action="cancel"}}{{t 'actions.back'}}{{/bs-button}}
