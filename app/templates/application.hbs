<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
          {{#if session.isAuthenticated}}
            {{#link-to "contacts" class="navbar-brand"}}addressbook{{/link-to}}
          {{else}}
            {{#link-to "index" class="navbar-brand"}}addressbook{{/link-to}}
          {{/if}}
        </div>


        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              {{#if session.isDecrypted}}
                  <li>{{#link-to 'map'}}Map{{/link-to}}</li>
                  <li>{{#link-to 'contacts.new'}}{{t 'contact.new'}}{{/link-to}}</li>
              {{/if}}
            </ul>
            <div class="nav navbar-nav navbar-right">
              {{#if session.isDecrypted}}
                  <li><a href="#" {{action 'getShares'}}><span class="glyphicon glyphicon-refresh"
                                                               aria-hidden="true"></span></a></li>
              {{/if}}
              {{#if session.isAuthenticated}}
                  <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                         aria-haspopup="true" aria-expanded="false">
                        {{session.data.authenticated.email}} <span class="caret"></span>
                      </a>
                      <ul class="dropdown-menu">
                          <li>{{#link-to 'preferences'}}{{t 'actions.preferences'}}{{/link-to}}</li>
                          <li><a href="#" {{action 'invalidateSession'}}>{{t 'actions.logout'}}</a></li>
                      </ul>
                  </li>
              {{else}}
                  <li>{{#link-to 'login'}}{{t 'actions.login'}}{{/link-to}}</li>
                  <li>{{#link-to 'signup'}}{{t 'actions.signup'}}{{/link-to}}</li>
              {{/if}}
            </div>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">
    <div class="flash-messages-container">
      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}
    </div>
    <div class="progress-bar-container">
      {{#if progress.max}}
        {{#bs-progress}}
          {{bs-progress-bar value=progress.value minValue=0 maxValue=progress.max showLabel=false type=progress.type}}
        {{/bs-progress}}
      {{/if}}
    </div>
  {{outlet}}
</div>

<footer class="footer">
    <div class="container">
        <p class="text-muted"><a href="" {{action "setLocale" "en-us"}}>English</a> | <a
                href="" {{action "setLocale" "de-de"}}>Deutsch</a></p>
    </div>
</footer>